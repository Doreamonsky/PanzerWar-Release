<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:ApkDownload.Resources.Localization"
             x:Class="ApkDownload.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,30"
            Spacing="25">
            <Button
                x:Name="DownloadGameBtn"
                Text="{x:Static strings:AppRes.DownloadGame}"
                Clicked="OnDownloadGameClicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="PlayFreeVerBtn"
                Text="{x:Static strings:AppRes.FreeVer}"
                Clicked="OnPlayFreeVerClicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="PlayDEVerBtn"
                Text="{x:Static strings:AppRes.DEVer}"
                Clicked="OnPlayPaidVerClicked"
                HorizontalOptions="Fill" />
            <Label x:Name="VersionInfo"></Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>